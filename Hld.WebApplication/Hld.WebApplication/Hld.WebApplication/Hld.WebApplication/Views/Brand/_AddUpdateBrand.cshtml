@model Hld.WebApplication.ViewModel.BrandViewModel
@using Hld.WebApplication.Models

<div class="container">
    <form asp-action="AddUpdateBrand" id="form1" role="form">
        <div class="form-group row">
            <label asp-for="BrandName" class="col-lg-3 col-sm-3 control-label font-weight-bold mr-2"></label>
            <div class="col-lg-9">
                @Html.HiddenFor(e => e.BrandId)
                <input asp-for="BrandName" id="BrandNameId" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <span id="IsExists"></span>
        </div>

        <div class="form-group">
            <input type="button" class="btn btn-light" disabled="true" id="btnSaveBrand" value="Submit" onclick="return SubmitForm();" />
        </div>

    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

