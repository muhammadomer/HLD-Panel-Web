@model IEnumerable<Hld.WebApplication.ViewModel.BrandViewModel>

<div class="container">

   
    <table id="table" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Sr. #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Action
                </th>

            </tr>
        </thead>
        <tbody>
            @{
                int sno = 0;
            }
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @{ sno++; }
                    @sno
                </td>
                <td>
                    @Html.HiddenFor(modelItem => item.BrandId)

                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>

                <td>
                    <a href="#" data-target="#myModal" data-toggle="modal" onclick="PopupForm('@Url.Action("AddUpdateBrand","Brand",new {id=item.BrandId } )')"> Edit </a>   |
                    <a href="#" onclick="AddEditEmployee(@item.BrandId)"> Delete  </a>
                </td>
            </tr>
            }


        </tbody>
    </table>
</div>



