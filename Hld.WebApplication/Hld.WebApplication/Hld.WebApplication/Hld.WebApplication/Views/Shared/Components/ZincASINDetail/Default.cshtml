@model IEnumerable<Hld.WebApplication.ViewModel.ProductZinAsinDetail>


<style>
    .removePadding .col-sm-6{
        padding-left:0px;
    }
</style>

<div class="removePadding">
    @if (Model != null && Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-sm-12 p-t-b">
                    <span>@item.priority</span>
                    <input style="margin-right:15px" id="ZincAsinRadioButton" class="ZincAsinRadioButton" data-MaxPrice="@item.max_price" data-ASIN="@item.ASIN" type="radio" name="@item.ProductSku" data-sku="@item.ProductSku" @*name="choice"*@ value="@item.ProductSku" data-id="@item.bb_product_zinc_id" />
                    <a target="_blank" href="https://www.amazon.ca/dp/@item.ASIN?th=1&psc=1">@item.ASIN</a>
                    @if (item.prime)
                    {

                        <img src="/Images/Prime-small.png" /> @*<span>Available</span>*@ }
                    else
                    {
                        <img src="/Images/Prime-Gray-small.png" />
                        <span style="font-weight:bold;color:red">Not Available</span>}
                    AMZPr: <span class="amazon_price">$@item.amazon_price</span><strong>,</strong>
                    MaxPr: <span class="max_price">$@item.max_price</span>
                    <span>
                        <a class="updateASINLinkLatestGET" data-SKU="@item.ProductSku">
                            <img class="" style="cursor:pointer;vertical-align:bottom!important" src="~/Images/RefresSCOrders.png" height="18px" width="18px" alt="">
                        </a><span>
                            <img style="display:none;" class="updateASINLinkLatest" height="20px" width="20px" src="~/Images/loadingImage.gif" />
                        </span><span class="selectasin" style="color:red;display:none">select ASIN!</span>
                    </span>
                </div>

            </div>
          

        }
    }

    else
    {
        <div>
            <span style="color:red">No ASIN detail found</span>
        </div>
    }
</div>
