@model Hld.WebApplication.ViewModel.AliasViewModel
@using Hld.WebApplication.Models

<div class="container">
    <form asp-action="AddUpdateAlias" id="form1" role="form">
        <div class="form-group row">
            <label asp-for="AliaName" class="col-lg-3 col-sm-3 control-label font-weight-bold mr-2"></label>
            <div class="col-lg-9">
                @Html.HiddenFor(e => e.AliaseID)
                <input asp-for="AliaName" class="form-control" />
                <span asp-validation-for="AliaName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="button" class="btn btn-light" value="Submit" onclick="return SubmitForm();" />
        </div>

    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

