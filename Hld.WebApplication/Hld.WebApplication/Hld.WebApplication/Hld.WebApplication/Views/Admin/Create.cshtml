@model User
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutNavigation.cshtml";
}
<h6 style="color: cadetblue;
    font-size: 20px;
    font-size: 14px;
    font-family: Arial;
    font-weight: 200;">
    Create User
</h6>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-1 col-form-label" style="">User ID:</label>
        <div class="col-sm-3">
            <input class="form-control form-control-sm" asp-for="Name" style="box-shadow:none">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Alias" class="col-sm-1 col-form-label" style="">User Name:</label>
        <div class="col-sm-3">
            <input class="form-control form-control-sm" asp-for="Alias" style="box-shadow:none">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-1 col-form-label">Email:</label>
        <div class="col-sm-3">
            <input class="form-control form-control-sm" asp-for="Email" style="box-shadow:none">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-1 col-form-label">Password:</label>
        <div class="col-sm-3">
            <input class="form-control form-control-sm" asp-for="Password" style="box-shadow:none">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-1 offset-1">
            <button type="submit" class="btn btn-primary" style="box-shadow:none">Create</button>
        </div>
        <div class="form-group row">
            <div class="col-sm- offset-0">
                <a asp-action="Index" class="btn btn-secondary" style="margin-left: -12px;box-shadow:none">Back</a>
            </div>
        </div>
    </div>
</form>