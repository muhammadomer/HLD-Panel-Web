@model IEnumerable<Hld.WebApplication.ViewModel.ProductImagesViewModel>


<style type="text/css">
    .img-wrap {
        position: relative;
        display: inline-block;
        margin:2px;
        font-size: 0;
    }

        .img-wrap .close {
            position: absolute;
            top: 2px;
            right: 2px;
            z-index: 100;
            background-color: #FFF;
            padding: 2px 2px 2px;
            color: #000;
            font-weight: bold;
            cursor: pointer;
            opacity: .2;
            text-align: center;
            font-size: 16px;
            line-height: 10px;
            border-radius: 50%;
        }

        .img-wrap:hover .close {
            opacity: 1;
        }
</style>

<div class="container">
   
    <a class="UpdateSkuImage">
        <img class="" style="cursor:pointer" src="~/Images/RefresSCOrders.png" height="18px" width="18px" alt="">
    </a>
    <span>
        <img style="display:none;" class="UpdateImageButtonLoader" height="25px" width="25px" src="~/Images/loadingImage.gif" />
    </span>
    <div class="row">
        @foreach (var item in Model)
        {


            <div class="img-wrap">
                <span data-porductImage-id="@item.ProductImageId" class="close">&times;</span>
                <a target="_blank" href="@ViewBag.S3BucketURL_large/@item.ImageURL">
                    <img src="@ViewBag.S3BucketURL/@item.ImageURL" class="rounded DeleteImage" height="100" width="100" />
                </a>
            </div>
        }
    </div>
</div>