@model PagedList.Core.IPagedList<Hld.WebApplication.ViewModel.BBtrackingCodesViewModel>
@using Hld.WebApplication.Helper
@*@model IEnumerable<Hld.WebApplication.ViewModel.BBtrackingCodesViewModel>*@
@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnv
@*@{
    ViewData["Title"] = "BBtrackingCodesList";
    Layout = "~/Views/Shared/_LayoutNavigation.cshtml";
}*@

<style>
    .credittable thead th {
        vertical-align: middle !important;
        border-bottom: 2px solid #dee2e6;
    }

    .credittable tbody td {
        text-align: left;
        vertical-align: middle !important;
    }
    .table {
        border-left: #ccc 1px solid !important;
        border-right: #ccc 1px solid !important;
        border-bottom: #ccc 1px solid !important;
    }
</style>
<div class="container-fluid">
   
    <table class="table credittable">
        <thead style="background-color:lightgrey!important">

            <tr>
                <th>
                    Carrier Name
                </th>
                <th>
                    Carrier Code
                </th>


                <th>
                    Tracking Number Code
                </th>
                <th>
                    Carrier Url
                </th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CarrierName</td>
                    <td>
                        @item.CarrierCode

                    </td>

                    <td>@item.TrackingNumberCode</td>

                    <td>@item.CarrierUrl</td>


                    <td>  @Html.ActionLink("Edit", "Edit", new { id = item.IdBBtrackingCodes }) </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/jQuery-Paging/jquery.paging.min.js"></script>
    <script src="~/lib/jQuery-MultiSelect/jquery.multiselect.js"></script>
    <script src="~/select2/js/select2.full.min.js"></script>

    <script src="~/lib/date-range-picker/moment.min.js"></script>
    <script src="~/lib/date-range-picker/daterangepicker.js"></script>

    <script src="~/lib/jquery.tablesorter/js/jquery.tablesorter.min.js"></script>
    <script src="~/js/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">

    </script>
}