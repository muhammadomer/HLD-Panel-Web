@model EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_LayoutNavigation.cshtml";
}
<h6 style="color: cadetblue;
    font-size: 20px;
    font-size: 14px;
    font-family: Arial;
    font-weight: 200;">
    Edit Role
</h6>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-3">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-3">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    @*<div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
            </div>
        </div>*@
    <div class="form-group row">
        <div class="col-sm-1 offset-1">
            <button type="submit" class="btn btn-primary" style="box-shadow:none">Update</button>
        </div>
        <div class="form-group row">
            <div class="col-sm- offset-0">
                <a asp-action="ListRoles" class="btn btn-secondary" style="margin-left: -12px;box-shadow:none">Cancel</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h6 style="color: cadetblue;
    font-size: 20px;
    font-size: 14px;
    font-family: Arial;
    font-weight: 200;">
                        Users
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title" style="font-size:12px;font-family:Arial">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title" style="font-size:12px;font-family:Arial">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Role" asp-action="EditUsersInRole"
                       asp-route-roleId="@Model.Id" class="btn btn-primary" style="box-shadow:none">
                        Add or remove users from this role
                    </a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h6 style="color: cadetblue;
    font-size: 20px;
    font-size: 14px;
    font-family: Arial;
    font-weight: 200;">
                        Permissions
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Permissions.Any())
                    {
                        foreach (var perm in Model.Permissions)
                        {
                            <h5 class="card-title" style="font-size:12px;font-family:Arial">@perm</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title" style="font-size:12px;font-family:Arial">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Role" asp-action="ManageRolePermission"
                       asp-route-roleId="@Model.Id" class="btn btn-primary" style="box-shadow:none">
                        Add or remove Permission from this role
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>