@model Hld.WebApplication.ViewModel.WarehouseAddressViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutNavigation.cshtml";
}

<h6>Add/Edit Address</h6>

<hr />

<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <input asp-for="ID" class="form-control" hidden />
            <div class="form-group col-md-3">
                <label asp-for="whname" class="control-label"></label>
                <input asp-for="whname" class="form-control" />
                <span asp-validation-for="whname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="whid" class="control-label"></label>
                <input asp-for="whid" class="form-control" />
                <span asp-validation-for="whid" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="companyname" class="control-label"></label>
                <input asp-for="companyname" class="form-control" />
                <span asp-validation-for="companyname" class="text-danger"></span>
            </div>


        </div>


        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="street1" class="control-label"></label>
                <input asp-for="street1" class="form-control" />
                <span asp-validation-for="street1" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="street2" class="control-label"></label>
                <input asp-for="street2" class="form-control" />
                <span asp-validation-for="street2" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="unit" class="control-label"></label>
                <input asp-for="unit" class="form-control" />
                <span asp-validation-for="unit" class="text-danger"></span>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="postelcode" class="control-label"></label>
                <input asp-for="postelcode" class="form-control" />
                <span asp-validation-for="postelcode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="state" class="control-label"></label>
                <input asp-for="state" class="form-control" />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="country" class="control-label"></label>
                <input asp-for="country" class="form-control" />
                <span asp-validation-for="country" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>


