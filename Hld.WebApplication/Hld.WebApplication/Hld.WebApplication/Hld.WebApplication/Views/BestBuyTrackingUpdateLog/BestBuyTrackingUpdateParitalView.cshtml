@model PagedList.IPagedList<Hld.WebApplication.ViewModel.BestBuyTrackingUpdate>
    @using Hld.WebApplication.Helper
  
    @inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnv
    @using Microsoft.AspNetCore.Authorization
    @inject IAuthorizationService AuthorizationService
    <style type="text/css">
        .maincontainer {
            background-color: #2A2B2B03;
            min-width: 1290px
        }

        .table-bordered thead th, .table-bordered thead td {
            padding: 0px;
            border-bottom-width: 2px;
        }

        .table thead th {
            vertical-align: middle !important;
            border-bottom: 2px solid #DEE2E6;
            text-align: center;
        }

        .table th, .table td {
            padding: 0.40rem;
            vertical-align: top;
            border-top: 1px solid #DEE2E6;
            vertical-align: middle !important;
        }

        .table tbody tr:hover {
            background-color: #F5F5F5;
        }

        .table td {
            text-align: center;
        }

        .table thead tr th {
            position: sticky;
            top: 50px;
            padding: 5px;
            z-index: 2;
            background-color: lightgray;
        }


        .tablesorter-default .tablesorter-header {
            outline: none !important;
        }

        .table {
            border-left: #ccc 1px solid !important;
            border-right: #ccc 1px solid !important;
        }
    </style>
    <div class="container-fluid mt-3 maincontainer">
       
        <table class="table tablesorter" style="margin-top:170px;width:98%!important">
            <thead style="background-color:lightgray;">
                <tr>
                    <th>Sc Order Id</th>
                    <th>BB Order Id</th>
                    <th>
                      Tracking Number
                    </th>
                    @*<th>
                        BBStatus
                    </th>*@
                    <th>
                        Shiping Service Code
                    </th>
                    <th>
                        Ship Date
                    </th>

                </tr>
            </thead>
            <tbody>
              
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.scOrderID
                    </td>
                    <td>
                        @item.bbOrderID
                    </td>
                    <td>
                        @item.trackingNumber
                    </td>
                    @*<td>
                        @item.BBStatus
                    </td>*@
                    <td>
                        @item.shippingServiceCode
                    </td>
                    <td>
                        @if (@item.shipDate != DateTime.MinValue)
                        {
                    @string.Format("{0: MMM d, yyyy}", @item.shipDate)}
                        
                    </td>

                </tr>
                }
            </tbody>
        </table>
       
    </div>
